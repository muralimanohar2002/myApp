<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/news_image"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_google_icon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/news_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:maxLines="1"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:text="Fifa World Cup 2021"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/news_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/news_title"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:maxLines="5"
        android:textSize="12sp"
        android:textColor="@color/text_grey"
        android:fontFamily="@font/roboto"
        android:text="Tesla CEO Elon Musk has said the will roll out the latest beta version of its 'full self-driving' software to 1,000 owners this weekend."/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxWidth="@dimen/_80sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/news_title"
        app:layout_constraintTop_toBottomOf="@id/news_desc"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:textColor="#657786"
        android:text="The Salesman"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/publisher"
        app:layout_constraintTop_toTopOf="@id/publisher"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:fontFamily="@font/roboto"
        android:textColor="#657786"
        android:text="35 min"/>

</androidx.constraintlayout.widget.ConstraintLayout>